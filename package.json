{
  "name": "first-light-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @firstlight/app dev",
    "build": "pnpm --filter @firstlight/app build",
    "lint": "pnpm --filter @firstlight/app lint",
    "preview": "pnpm --filter @firstlight/app preview",
    "clean": "pnpm -r exec rm -rf node_modules dist",
    "install:all": "pnpm install",
    "build:all": "pnpm -r --filter=@firstlight/app build",
    "build:ui": "pnpm --filter @firstlight/ui build",
    "build:tokens": "pnpm --filter @firstlight/tokens build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.536.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.0",
    "@storybook/addon-a11y": "^9.1.1",
    "@storybook/addon-docs": "^9.1.1",
    "@storybook/addon-onboarding": "^9.1.1",
    "@storybook/addon-vitest": "^9.1.1",
    "@storybook/react-vite": "^9.1.1",
    "@storybook/test": "9.0.0-alpha.2",
    "@storybook/theming": "9.0.0-alpha.1",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-storybook": "^9.1.1",
    "playwright": "^1.54.2",
    "storybook": "^9.1.1",
    "typescript": "^5.2.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
