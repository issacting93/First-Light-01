{
  "name": "@firstlight/tokens",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tailwind.preset": {
      "import": "./dist/tailwind.preset.js",
      "types": "./dist/tailwind.preset.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && cp src/styles.css dist/",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "jsdom": "^23.0.1",
    "tsup": "^8.0.0",
    "typescript": "^5.2.2",
    "vitest": "^1.0.4"
  },
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  }
} 